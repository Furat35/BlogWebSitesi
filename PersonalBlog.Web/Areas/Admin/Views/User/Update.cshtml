@model UserUpdateDto
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Güncelle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-area="Admin" asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        @*<div asp-validation-summary="ModelOnly" style="color:red;"></div>*@
                        <div class="mb-3 form-group">
                            <input asp-for="Id" type="hidden"/>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="FirstName" class="form-label">isim</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Kullanıcının ismini giriniz.">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="LastName" class="form-label">Soyisim</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Kullanıcının soyismini giriniz.">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Email" lass="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Kullanıcının emailini giriniz.">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Kullanıcını telefon giriniz.">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="RoleId" class="form-label">Rol</label>
                            <select class="form-control" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"> </select>
                        </div>
                        <div class="row">
                            <div class="mb-3 form-group col-md-6">
                                <label asp-for="Image.FileName" class="form-label d-block">Mevcut Resim</label>
                                <img style="height:25em;width:25em;" class="mb-3" src="@Model.Image.FileName" alt="@Model.Image.FileName" asp-append-version="true" />
                            </div>
                            <div class="mb-3 form-group col-md-6">
                                <label asp-for="Photo" class="form-label">Resim Seçiniz</label>
                                <input asp-for="Photo" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block d-block m-auto pt-md-2 pb-md-2" style="width: 15%;">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>