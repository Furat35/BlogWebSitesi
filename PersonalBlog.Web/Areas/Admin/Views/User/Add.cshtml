@model UserAddDto
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        @*<div asp-validation-summary="ModelOnly" style="color:red;"></div>*@
                        <div class="mb-3 form-group">
                            <label asp-for="FirstName" class="form-label">isim</label>
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="Lütfen kullanıcının ismini giriniz.">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="LastName" class="form-label">Soyisim</label>
                            <input asp-for="LastName" type="text" class="form-control" placeholder="Lütfen kullanıcının soyismini giriniz.">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Email" for="name" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Lütfen kullanıcının emailini giriniz.">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control"  placeholder="Lütfen kullanıcını telefon giriniz.">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="RoleId" class="form-label">Rol</label>
                            <select class="form-control" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))"> </select>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-group">
                            <label asp-for="Photo" class="form-label">Görsel</label>
                            <input asp-for="Photo" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block d-block m-auto pt-md-2 pb-md-2" style="width: 15%;">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>