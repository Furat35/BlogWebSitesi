<!DOCTYPE html>
<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-template="vertical-menu-template-free">
<head>

    <!-- Head -->
    <partial name="~/Areas/Admin/Views/Shared/LayoutPartials/_LayoutPartials/_HeadPartial.cshtml"/>

    @RenderSection("Head", false)

</head>

<body>

    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">

            <!-- Aside Navbar -->
            <partial name="~/Areas/Admin/Views/Shared/LayoutPartials/_LayoutPartials/_AsideNavbarPartial.cshtml"/>
            
            <div class="layout-page">
    
                <!-- Header Navbar -->
                <partial name="~/Areas/Admin/Views/Shared/LayoutPartials/_LayoutPartials/_HeaderNavbarPartial.cshtml"/>

                <!-- Main Container -->
                @RenderBody()

            </div>
        </div>

        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <!-- Scripts -->
    <partial name="~/Areas/Admin/Views/Shared/LayoutPartials/_LayoutPartials/_ScriptPartial.cshtml"/>

    @RenderSection("Scripts", false)

    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
