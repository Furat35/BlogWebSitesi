@model List<RoleDto>
@{
    ViewData["Title"] = "Rol Yönetimi";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Rol Yönetimi /</span> Roller</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card p-3">
        <div class="table-responsive text-nowrap">
            <a class="btn btn-success mt-3 mb-3" asp-area="Admin" asp-controller="Role" asp-action="Add">
                Rol Ekle <i class="bx bx-plus"></i>
            </a>
            <table class="table table-striped" id="rolesTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Rol</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Rol</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@role.Id" asp-area="Admin" asp-controller="Role" asp-action="Update" asp-route-roleId="@role.Id"><i class="bx bxs-edit"></i></a>
                                <button class="btn btn-danger btn-sm openDeleteDialog" data-id="@role.Id" data-name="@role.Name" data-bs-toggle="modal" data-bs-target="#exampleModal"> <i class="bx bxs-minus-circle"></i> </button>
                                @*<a class="btn btn-danger btn-sm" data-id="@role.Id" onclick="return confirm('Rolü silmek istediğine emin misin ?')" asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-roleId="@role.Id"><i class="bx bxs-minus-circle"></i></a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UYARI!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @*Makaleyi silmek istediğinize emin misiniz ?*@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal Et</button>
                <a type="button" href="#" id="sil" class="btn btn-primary">Sil</a>
            </div>
        </div>
    </div>
</div>

@section Head{
    <link rel="stylesheet" href="~/css/Admin/roleIndex.css"/>
}

@section Scripts{
    <script src="//cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>
    <script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}