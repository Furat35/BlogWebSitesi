@model RoleUpdateDto
@{
    ViewData["Title"] = "Rol Yönetimi";
}



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Rol Yönetimi /</span> Rol Güncelle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-area="Admin" asp-controller="Role" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3 form-group">
                            <label asp-for="Name" class="form-label">Rol</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Rol ismini giriniz.">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block d-block m-auto pt-md-2 pb-md-2" style="width: 15%;">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>